<link rel="stylesheet" href="css/mystyle.css">
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="white-box">
                    <h1 style="color:Red;font-weight:bold; font-size:30px">THÊM SÁCH</h1>
                     <hr>
                     <div class="row">
                    {{#if errors }}
                        <h4 class="text-center text-danger">{{errors}}</h4>
                    {{/if}}
                    </div>
               <form class="form-horizontal" method="post">
                    <div class="form-group">
                         <label class="col-lg-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Tên sản phẩm :</label>
                         <div class="col-lg-8">
                              <input class="form-control" type="text"  name="BookName" minlength="5" >
                         </div>
                     </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Giá gốc:</label>
                        <div class="col-md-8">
                              <input class="form-control" type="number" step="500"  name="Price" minlength="3" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Mô tả:</label>
                        <div class="col-md-8">
                              <input class="form-control" type="text"  name="Description" minlength="2" >
                        </div>
                    </div>

                     <div class="form-group">
                        <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Tác giả:</label>
                                 <select name="Author">
                                    {{#each data1}} 
                                        <option value={{ID_Author}}>{{NameAuthor}}</option>                                        
                                    {{/each}}                                                                     
                            </select>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Loại:</label>
                                 <select name="Category">
                                    {{#each data2}} 
                                        <option value={{ID_Category}}>{{NameCategory}}</option>
                                    {{/each}}                                                                     
                            </select>
                    </div>
                   <div class="form-group">
                       <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Nhà Xuất Bản:</label>
                            <select name="Publisher">
                                   {{#each data3}} 
                                        <option value={{ID_Publisher}}>{{NamePublisher}}</option>                               
                                    {{/each}}                                                    
                            </select>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Số lượng sản phẩm:</label>
                        <div class="col-md-8">
                              <input class="form-control" type="number"  name="Quantity" minlength="3">
                        </div>
                    </div>
                    <div class="form-group">
                         <label class="col-md-3 control-label"></label>
                         <div class="col-md-8">
                            <button class="btn btn-block btn-primary" type="submit">THÊM</button>
                        </div>
                    </div>
                </form>
             </div>
         </div>
    </div>
</div>

