
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2><b>Quản lí phiếu thu tiền</b></h2>
                </div>
                
                <div class="col-sm-7">
                    <form method="POST">                   
                    </form>
                    <a href="/addBill" class="btn btn-primary"><i class="material-icons">&#xE147;</i> <span style="color:GREEN;font-weight:bold;">Thêm phiếu thu tiền</span></a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table">
                    <thead class="bg-light">
                    <tr class="border-0">
                        <th class="border-0"></th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">ID_Bill</th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">ID_Order</th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">Chi tiết</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr>
                            <td></td>
                            <td>{{ID_Bill}}</td>
                            <td>{{ID_Order}}</td>
                            <td><a href="/BillDetail/{{ID_Bill}}" style="color: red;"><u>XEM</u></a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                <div class="clearfix">
                    <ul class="pagination">
                        {{#for total_page}}
                            {{#ifCond currentpage @index}}
                                <li   class="page-item active"><a href="?page={{@index}}" >{{@index}}</a></li>
                            {{else}}
                                <li   class="page-item"><a href="?page={{@index}}" >{{@index}}</a></li>
                            {{/ifCond}}
                        {{/for}}
                    </ul>
                </div>
                
                </div>
            </div>
        </div>
    </div>
</div>
