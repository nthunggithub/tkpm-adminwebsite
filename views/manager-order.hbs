
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2><b>TẤT CẢ ĐƠN HÀNG</b></h2>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table">
                    <thead class="bg-light">
                    <tr class="border-0">
                        <th class="border-0"></th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">ID đơn hàng</th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">Địa chỉ</th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">Gía tiền</th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">Trạng Thái</th>
                        <th class="border-0" style="color:blue;font-weight:bold; font-size:20px">Chi tiết</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr>
                            <td></td>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ID_Order}}</td>
                            <td>&nbsp;{{Address}}</td>
                            <td>&nbsp;&nbsp;&nbsp;{{Amount}}</td>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{Status}}</td>
                            <td >
                                <a href="/UpdateOrder/{{ID_Order}}" style="color: red;">&nbsp;&nbsp;&nbsp;<u>XEM</u></a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                <div class="clearfix">
                    <ul class="pagination">
                        {{#for total_page}}
                            {{#ifCond currentpage @index}}
                                <li   class="page-item active"><a href="?page={{@index}}" >{{@index}}</a></li>
                            {{else}}
                                <li   class="page-item"><a href="?page={{@index}}" >{{@index}}</a></li>
                            {{/ifCond}}
                        {{/for}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>