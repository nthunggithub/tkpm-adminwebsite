<link rel="stylesheet" href="css/mystyle.css">
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="white-box">
                    <h1 style="color:Red;font-weight:bold; font-size:30px">THAY ĐỔI QUY ĐỊNH</h1>
                     <hr>
                     <div class="row">
                    {{#if errors }}
                        <h4 class="text-center text-danger">{{errors}}</h4>
                    {{/if}}
                    </div>
               <form class="form-horizontal" method="post">
                    <div class="form-group">
                        <label class="col-lg-3 control-label" style="color:blue;font-weight:bold; font-size:20px">ID_Regulation:</label>
                        <div class="col-lg-8">
                                <label class="form-control" type="text" name="username" value="{{data.ID_Regulation}}">{{data.ID_Regulation}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Số lượng tối thiểu:</label>
                        <div class="col-md-8">
                             <input class="form-control" type="number" name="minquality" min=1 value={{data.minquality}}>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" style="coloR:BLUE;font-weight:bold; font-size:20px">Số lượng tối đa:</label>
                        <div class="col-md-8">
                              <input class="form-control" type="number" name="maxquality" min=1 value={{data.maxquality}}>
                        </div>
                    </div>
                    <div class="form-group">
                         <label class="col-md-3 control-label"></label>
                         <div class="col-md-8">
                            <button class="btn btn-block btn-primary" type="submit">CẬP NHẬT</button>
                        </div>
                    </div>
                </form>
             </div>
         </div>
    </div>
</div>

