
<div class="splash-container">
    <div class="card ">
        <div class="card-header">
            <h3 class="mb-1">Đăng ký</h3>
            <p>Vui lòng điền thông tin</p>
        </div>
              
        {{# if check }}
            <h4>Successful validation!</h4>
        {{/if}}

        {{# if errors }}

            <h4 class="custom-control" id="errorsignup">{{errors}}</h4>

        {{/if}}

        <div class="card-body">
            <form action="/sign-up" method="post">
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="username" required="" placeholder="Tài khoản" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="email" name="email" required="" placeholder="E-mail" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" id="pass1" type="password" name="password" required="" placeholder="Mật khẩu" minlength="6">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="password" required="" name="confirm" placeholder="Nhập lại mật khẩu">
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox">
                        <input class="custom-control-input" type="checkbox" name="checkbox"><span class="custom-control-label">Bạn đồng ý với các <a href="#">điều khoản và điều kiện</a></span>
                    </label>
                </div>
                <div class="form-group pt-2">
                    <button class="btn btn-block btn-primary" type="submit">Đăng ký tài khoản</button>
                </div>               
            </form>
        </div>
        <div class="card-footer bg-white">
            <p>Đã có tài khoản? <a href="/login" class="text-secondary">Đăng nhập tại đây</a></p>
        </div>
    </div>
</div>

