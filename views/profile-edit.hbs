
<link rel="stylesheet" href="css/mystyle.css">


<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="white-box">
    <h1 style="color:red;font-weight:bold; font-size:30px">Hồ sơ cá nhân</h1>
    <hr>
  <div class="row">
      <!-- left column -->
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div>
            {{# if errors }}
                <h4>{{errors}}</h4>
            {{/if}}
        </div>

              <form class="form-horizontal" method="post">

                  <div class="form-group">
                      <label class="col-lg-3 control-label" style="color:blue;font-weight:bold; font-size:20px">First name:</label>

                      <div class="col-lg-8">
                          <input class="form-control" type="text" minlength="3" name="firstname" value="{{data.FullName}}" >
                      </div>

                  </div>
                    
                  <div class="form-group">
                      <label class="col-lg-3 control-label" style="color:blue;font-weight:bold; font-size:20px">Email:</label>
                      <div class="col-lg-8">
                          <input class="form-control" type="email" minlength="3" name="email" value="{{data.Email}}">
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-3 control-label" style="color:blue;font-weight:bold; font-size:20px">Username:</label>
                      <div class="col-md-8">
                          <input class="form-control" type="text" minlength="3" name="username" value="{{data.UserName}}" required oninvalid="this.setCustomValidity('Yêu cầu nhập a-z A-Z 0-9 - _ .')" oninput="this.setCustomValidity('');" pattern="^(?=.{6,20}$)(?:[a-zA-Z\d]+(?:(?:\.|-|_)[a-zA-Z\d])*)+$">
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-3 control-label" style="color:blue;font-weight:bold; font-size:20px">Old Password:</label>
                      <div class="col-md-8">
                          <input class="form-control" type="password" minlength="6" name="oldpassword" pattern="^[A-Za-z\d@$!%*.#?&_-]{6,18}$" oninvalid="this.setCustomValidity('Yêu cầu nhập a-z A-Z 0-9 và ký tự đặt biệt')" oninput="this.setCustomValidity('');">
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-3 control-label" style="color:blue;font-weight:bold; font-size:20px">New Password:</label>
                      <div class="col-md-8">
                          <input class="form-control" type="password" minlength="6" name="password" value="" pattern="^[A-Za-z\d@$!%*.#?&_-]{6,18}$" oninvalid="this.setCustomValidity('Yêu cầu nhập a-z A-Z 0-9 và ký tự đặt biệt')" oninput="this.setCustomValidity('');">
                      </div>
                  </div>
                  
                  <div class="form-group">
                      <label class="col-md-3 control-label"></label>
                      <div class="col-md-8">
                          <button class="btn btn-block btn-primary" type="submit">LƯU</button>
                      </div>
                  </div>

              </form>

      </div>
  </div>
</div>
</div>
</div>
</div>
</div>
